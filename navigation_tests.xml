<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="navigation_tests">
    <test verbose="2" name="Navigation">
        <classes>
            <class name="Tests.HeaderNavigationTest">
                <methods>
                    <include name="testHeaderHomeNavigationLink"/>
                    <include name="testHeaderNavigationLinks"/>
                    <include name="testHeaderSecondaryNavigationLinks"/>
                </methods>
            </class>
            <class name="Tests.NavigationMenuTest">
                <methods>
                    <include name="testSearchByKeyWord"/>
                    <include name="testLeftHandMenuHomeOptionOpensHomePage"/>
                    <include name="testLeftHandLevelOneSubOptionsUnfold"/>
                    <include name="testLeftHandSubOptionsLevelTwoUnfold"/>
                    <include name="testLeftHandMenuOptionNavigatesToPage"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>